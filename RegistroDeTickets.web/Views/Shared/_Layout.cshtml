@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject IOptions<RequestLocalizationOptions> LocOptions
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = char.ToUpper(c.NativeName[0]) + c.NativeName.Substring(1) }).ToList();
    var currentCulture = requestCulture.RequestCulture.UICulture;
}

<!DOCTYPE html>
<html lang="@requestCulture.RequestCulture.UICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RegistroDeTickets.web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RegistroDeTickets.web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/@ViewData["CSS"]" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top border-bottom py-2" style="background-color: #fdf8f4;">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/LogoDoneTick.png" alt="DoneTick Logo" height="40" class="d-inline-block align-top me-2" style="width: auto; max-height: 45px;" />
                </a>
                <div class="ms-auto d-flex align-items-center">
                    <a class="nav-link me-4 fw-bold" style="color: var(--donetick-dark-purple);" asp-controller="Usuario" asp-action="IniciarSesion">@Localizer["IniciarSesion"]</a>

                    <div class="language-select-container">

                        <!--
                    <form asp-controller="Culture" asp-action="SetIdioma" asp-route-returnUrl="@Context.Request.Path" method="post" class="mb-0">

                        <select name="culture" class="form-select form-select-sm border-secondary-subtle bg-white" style="width: auto;" onchange="this.form.submit()" asp-for="@requestCulture.RequestCulture.UICulture.Name" asp-items="cultureItems">
                        </select>
                    </form>
                    -->
                        <form asp-controller="Culture" asp-action="SetIdioma" asp-route-returnUrl="@Context.Request.Path" method="post" id="cultureForm" class="mb-0">
                            <input type="hidden" name="culture" id="cultureInput" value="@currentCulture.Name" />

                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle d-flex align-items-center"
                                        type="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false"
                                        style="min-width: 100px;">
                                   
                                    @currentCulture.DisplayName
                                </button>

                                <ul class="dropdown-menu shadow-sm">
                                    @foreach (var culture in cultureItems)
                                    {
                                        <li>
                                            <a class="dropdown-item @(culture.Value == currentCulture.Name ? "active" : "")"
                                               href="javascript:void(0)"
                                               onclick="submitCultureForm('@culture.Value')">
                                                @culture.Text
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </nav>
    </header>
        <main role="main"">
            @RenderBody()
        </main>
    <footer class="py-4" style="background-color: var(--donetick-cream); color: var(--donetick-dark);">
    <div class="container py-2">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0 opacity-75">© 2025-2026 - <span class="fw-bold">DoneTick</span>@Localizer["Derechos"]</p>
            </div>
            <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                <a href="#" class="text-white text-decoration-none mx-2 opacity-75">Privacidad</a>
                <a href="#" class="text-white text-decoration-none mx-2 opacity-75">Soporte</a>
            </div>
        </div>
    </div>
</footer>
    <script>
        function submitCultureForm(culture) {
            document.getElementById('cultureInput').value = culture;
            document.getElementById('cultureForm').submit();
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>