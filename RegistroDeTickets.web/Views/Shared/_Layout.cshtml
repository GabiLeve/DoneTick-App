<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RegistroDeTickets.web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RegistroDeTickets.web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/@ViewData["CSS"]" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --donetick-dark: #00004e;
            --donetick-blue-deep: #000380;
            --donetick-purple: #6a40da;
            --donetick-cream: #FFF7F0;
            --donetick-dark-purple: #4b1c71;
        }

        .bg-main-gradient {
            background: linear-gradient(180deg, var(--donetick-cream) 0%, #e1cbf1 100%);
        }

        .shadow-distinction {
            box-shadow: 0 20px 40px rgba(0, 0, 78, 0.12) !important;
        }

        .btn-donetick-primary {
            background-color: var(--donetick-purple) !important;
            color: white !important;
            border-radius: 50px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-donetick-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(106, 64, 218, 0.3) !important;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top border-bottom py-3" style="background-color: #fdf8f4;">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/LogoDoneTick.png"
                         alt="DoneTick Logo"
                         height="40"
                         class="d-inline-block align-top me-2"
                         style="width: auto; max-height: 45px;" />
                </a>
                <div class="ms-auto d-flex align-items-center">
                    <a href="/Identity/Account/Login" class="nav-link me-4 fw-bold" style="color: var(--donetick-dark-purple);">Iniciar Sesión</a>
                    <select class="form-select form-select-sm border-secondary-subtle bg-white" style="width: auto;">
                        <option>ES</option>
                        <option>EN</option>
                    </select>
                </div>
            </div>
        </nav>
    </header>
        <main role="main"">
            @RenderBody()
        </main>
    <footer class="py-5" style="background-color: var(--donetick-dark); color: #ffffff;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start">
                <p class="mb-0 opacity-75">© 2025-2026 - <span class="fw-bold">DoneTick</span>. Todos los derechos reservados.</p>
            </div>
            <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                <a href="#" class="text-white text-decoration-none mx-2 opacity-75">Privacidad</a>
                <a href="#" class="text-white text-decoration-none mx-2 opacity-75">Soporte</a>
            </div>
        </div>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>