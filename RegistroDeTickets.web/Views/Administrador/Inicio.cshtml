@{
    ViewData["Title"] = "Inicio";
    ViewData["CSS"] = "Home/inicio.css";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="hero-section-home">
    <div class="container text-center">
        <h1 class="display-4 hero-title">Bienvenido al Centro de Soporte</h1>
        <p class="lead">Estamos aquí para ayudarte. Registra tu consulta o reclamo y un técnico se pondrá en contacto a la brevedad.</p>
        <a asp-controller="Administrador" asp-action="Listar" class="btn btn-custom-primary btn-lg mt-3">Ver tickets</a>
        <a asp-controller="Administrador" asp-action="ListarUsuarios" class="btn btn-custom-primary btn-lg mt-3">Ver Usuarios</a>
        <a asp-controller="Administrador" asp-action="RegistrarUsuarioTecnico" class="btn btn-custom-primary btn-lg mt-3">Registrar tecnico</a>
    </div>
</div>